<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaochaos.gdggranada.Main">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="366dp"
            android:layout_marginTop="79dp"
            android:layout_below="@+id/editText3"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="107dp"
            android:layout_height="113dp"
            app:srcCompat="@mipmap/gdg_launcher"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="495dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:id="@+id/scrollView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="352dp"
            android:layout_height="143dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Somos una organización sin ánimo de lucro amantes de la tecnología, y predicamos la palabra de Santa Tecla a todo aquel lo suficientemente geek como para sentarse a escuchar."
            android:textStyle="italic"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="195dp"
            android:layout_below="@+id/descripcion1"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/descripcion1"
            android:layout_width="156dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="¿Quiénes somos?"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="140dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
